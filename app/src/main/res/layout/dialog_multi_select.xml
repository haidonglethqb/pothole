<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pothole Type Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Pothole Type"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor" />

        <CheckBox
            android:id="@+id/checkbox_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium" />

        <CheckBox
            android:id="@+id/checkbox_severe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Severe" />
    </LinearLayout>

    <!-- Date Range Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date Range"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <RadioGroup
        android:id="@+id/radio_group_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_7_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 7 days" />

        <RadioButton
            android:id="@+id/radio_14_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 14 days" />

        <RadioButton
            android:id="@+id/radio_30_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 30 days" />
    </RadioGroup>

    <!-- Distance Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Distance"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <RadioGroup
        android:id="@+id/radio_group_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_1_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Within 1 km" />

        <RadioButton
            android:id="@+id/radio_3_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Within 3 km" />

        <RadioButton
            android:id="@+id/radio_5_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Within 5 km" />
    </RadioGroup>

</LinearLayout>