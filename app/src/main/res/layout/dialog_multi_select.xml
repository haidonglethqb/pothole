<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Pothole Severity"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_minor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/minor" />

        <CheckBox
            android:id="@+id/checkbox_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Minor"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_medium"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/medium" />

        <CheckBox
            android:id="@+id/checkbox_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Medium"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_severe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/potholecaution" />

        <CheckBox
            android:id="@+id/checkbox_severe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Severe"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>

</LinearLayout>