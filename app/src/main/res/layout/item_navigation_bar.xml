<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/rounded_navigation_bar"
    android:padding="8dp">

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="Open home"
        android:scaleType="centerInside"
        android:src="@drawable/home"
        app:tint="@color/black" />

    <!-- Maps Button -->
    <ImageButton
        android:id="@+id/maps_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_toEndOf="@id/home_button"
        android:background="@android:color/transparent"
        android:contentDescription="Open maps"
        android:scaleType="centerInside"
        android:src="@drawable/maps"
        app:tint="@color/black" />

    <!-- History Button -->
    <ImageButton
        android:id="@+id/history_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_toEndOf="@id/maps_button"
        android:background="@android:color/transparent"
        android:contentDescription="Open report history"
        android:scaleType="centerInside"
        android:src="@drawable/history"
        app:tint="@color/black" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_toEndOf="@id/history_button"
        android:background="@android:color/transparent"
        android:contentDescription="Open settings"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        app:tint="@color/black" />
</RelativeLayout>
