<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <!-- Tiêu đề tạo tài khoản -->
    <TextView
        android:id="@+id/RegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:gravity="center"
        android:paddingTop="16dp"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F41BB"
        android:layout_marginBottom="8dp" />

    <!-- Thông điệp chào mừng -->
    <TextView
        android:id="@+id/tvRegisterMessage"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Create an account so you can \njoin our community"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Trường nhập Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field" />

    <!-- Trường nhập Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field" />

    <!-- Trường xác nhận Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field" />

    <!-- Nút Đăng ký -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#1F41BB"
        android:textColor="@color/white"
        android:layout_marginBottom="24dp" />

    <!-- Liên kết đăng nhập -->
    <TextView
        android:id="@+id/tvAlreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account"
        android:textColor="#626262"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Hoặc tiếp tục với -->
    <TextView
        android:id="@+id/tvContinueWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or continue with"
        android:textStyle="bold"
        android:textColor="#1F41BB"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Nút Google và Facebook -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Nút Google -->
        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:contentDescription="Sign up with Google" />

        <!-- Nút Facebook -->
        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/facebook"
            android:background="@null"
            android:contentDescription="Sign up with Facebook" />
    </LinearLayout>

</LinearLayout>
