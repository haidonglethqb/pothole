<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Tiêu đề tạo tài khoản -->
    <TextView
        android:id="@+id/RegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:gravity="center"
        android:paddingTop="16dp"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F41BB"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Thông điệp chào mừng -->
    <TextView
        android:id="@+id/tvRegisterMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/register_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/RegisterTitle"
        android:layout_centerHorizontal="true"/>

    <!-- Trường nhập Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field"
        android:layout_below="@id/tvRegisterMessage"/>

    <!-- Trường nhập Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field"
        android:layout_below="@id/etEmail"/>

    <!-- Trường xác nhận Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_confirm_password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_field"
        android:layout_below="@id/etPassword"/>

    <!-- Nút Đăng ký -->

    <!-- Liên kết đăng nhập -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConfirmPassword"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button_small"
        android:backgroundTint="#1F41BB"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAlreadyHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_account"
        android:textColor="#626262"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/btnSignUp"
        android:layout_centerHorizontal="true"/>

    <!-- Hoặc tiếp tục với -->
    <TextView
        android:id="@+id/tvContinueWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continue_with"
        android:textStyle="bold"
        android:textColor="#1F41BB"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/tvAlreadyHaveAccount"
        android:layout_centerHorizontal="true"/>

    <!-- Nút Google và Facebook -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tvContinueWith"
        android:layout_centerHorizontal="true">

        <!-- Nút Google -->
        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/google"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:contentDescription="Sign up with Google" />

        <!-- Nút Facebook -->
        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/facebook"
            android:background="@null"
            android:contentDescription="Sign up with Facebook" />
    </LinearLayout>

</RelativeLayout>