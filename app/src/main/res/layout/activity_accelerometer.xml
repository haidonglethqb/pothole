<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thông tin cảm biến -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSensorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/sensorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Name:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sensorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Type:"
                    android:textSize="16sp"
                    android:layout_below="@id/sensorName"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/maxRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Range:"
                    android:textSize="16sp"
                    android:layout_below="@id/sensorType"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolution:"
                    android:textSize="16sp"
                    android:layout_below="@id/maxRange"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Kinh độ và vĩ độ -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardSensorInfo"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude: 0.0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude: 0.0"
                    android:textSize="16sp"
                    android:layout_below="@id/latitude"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/Speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/longitude"
                    android:layout_marginTop="7dp"
                    android:text="Speed: 0.0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Speed"
                    android:layout_marginTop="7dp"
                    android:text="Distance: 0.0"
                    android:textSize="16sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Giá trị hiện tại -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardLocation"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/currentX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current X: 0.0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/currentY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Y: 0.0"
                    android:textSize="16sp"
                    android:layout_below="@id/currentX"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/currentZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Z: 0.0"
                    android:textSize="16sp"
                    android:layout_below="@id/currentY"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/combinedDelta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combined Delta: 0"
                    android:textSize="16sp"
                    android:layout_below="@id/currentZ"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Giá trị tối đa -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMaxValues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardCurrentValues"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/maxX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max X: 0.0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/maxY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Y: 0.0"
                    android:textSize="16sp"
                    android:layout_below="@id/maxX"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/maxZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Z: 0.0"
                    android:textSize="16sp"
                    android:layout_below="@id/maxY"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thông tin ổ gà -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPotholeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardMaxValues"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/potholeTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pothole: 0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/minorPothole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minor: 0"
                    android:textSize="16sp"
                    android:layout_below="@id/potholeTotal"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/mediumPothole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium: 0"
                    android:textSize="16sp"
                    android:layout_below="@id/minorPothole"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/severePothole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Severe: 0"
                    android:textSize="16sp"
                    android:layout_below="@id/mediumPothole"
                    android:layout_marginTop="8dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút đặt lại -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_small"
            android:layout_below="@id/cardPotholeInfo"
            android:layout_marginVertical="16dp"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>