<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Hình ảnh pothole -->
        <ImageView
            android:id="@+id/pothole_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pothole_caution"
            android:layout_alignParentTop="true" />

        <!-- Latitude -->
        <TextView
            android:id="@+id/pothole_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pothole_image"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="Latitude:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Longitude -->
        <TextView
            android:id="@+id/pothole_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pothole_latitude"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Longitude:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Severity -->
        <TextView
            android:id="@+id/pothole_severity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pothole_longitude"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Severity:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Street Name -->
        <TextView
            android:id="@+id/pothole_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pothole_severity"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Street Name:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Detection Time -->
        <TextView
            android:id="@+id/pothole_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pothole_street"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Detection Time:"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
