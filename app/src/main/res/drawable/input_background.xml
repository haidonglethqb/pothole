<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái bình thường -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Đường viền xám -->
            <corners android:radius="8dp" /> <!-- Bo góc -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Trạng thái khi trường nhập bị vô hiệu hóa -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Màu nền nhạt -->
            <stroke
                android:width="1dp"
                android:color="#999999" /> <!-- Đường viền xám đậm -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Trạng thái khi trường nhập được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="2dp"
                android:color="#007AFF" /> <!-- Đường viền xanh lam -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
